{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "target": "es2016",                                  
    "module": "commonjs",                               
    "moduleResolution": "node",                     
    "outDir": "./build",                                             
    "esModuleInterop": true,                                   
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                                 
    "skipLibCheck": true                                
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
